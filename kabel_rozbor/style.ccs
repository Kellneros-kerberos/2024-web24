body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f4f4f4;
}

header {
  background-color: #333;
  color: white;
  text-align: center;
  padding: 15px;
}

nav ul {
  background-color: #444;
  padding: 0;
  list-style: none;
  text-align: center;
}

nav ul li {
  display: inline;
  margin: 10px;
}

nav ul li a {
  color: white;
  text-decoration: none;
  padding: 10px 20px;
}

nav ul li a:hover {
  background-color: #666;
}

section {
  margin: 20px;
  padding: 20px;
  background: white;
  border-radius: 8px;
  border: 2px solid #ccc; /* Přidaný rámeček */
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); /* Jemný stín */
}

img {
  display: block;
  max-width: 100%;
  height: auto;
  margin: 10px auto;
  border: 2px solid #444; /* Přidaný rámeček kolem obrázků */
  border-radius: 5px;
  padding: 5px;
  background: #fff;
}

footer {
  text-align: center;
  padding: 10px;
  background-color: #333;
  color: white;
  position: relative;
  bottom: 0;
  width: 100%;
  margin-top: 20px;
}
